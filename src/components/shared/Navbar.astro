---
import Button from "../ui/Button.astro";
---

<nav
    class="fixed top-0 left-0 w-full z-50 bg-black/50 backdrop-blur-xl border-b border-white/10"
>
    <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        <!-- Logo -->
        <a
            href="/"
            class="text-2xl font-bold tracking-tighter hover:opacity-80 transition-opacity text-white"
        >
            Los <span class="text-primary">Tralaleritos</span>
        </a>

        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center gap-8">
            <a
                href="#nosotros"
                class="text-sm text-gray-400 hover:text-white transition-colors"
                >Nosotros</a
            >
            <a
                href="#salidas"
                class="text-sm text-gray-400 hover:text-white transition-colors"
                >Salidas</a
            >
            <a
                href="#servicios"
                class="text-sm text-gray-400 hover:text-white transition-colors"
                >Servicios</a
            >
            <a
                href="#contacto"
                class="text-sm text-gray-400 hover:text-white transition-colors"
                >Contacto</a
            >
        </div>

        <!-- CTA -->
        <div class="hidden md:block">
            <Button
                href="#contacto"
                variant="primary"
                class="!py-2 !px-4 text-sm"
            >
                Únetenos
            </Button>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden text-white p-2">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Menu Container -->
    <div
        id="mobile-menu"
        class="hidden md:hidden absolute top-20 left-0 w-full bg-black/90 backdrop-blur-xl border-b border-white/10 p-6 flex-col gap-4"
    >
        <a
            href="#nosotros"
            class="mobile-link text-lg text-gray-400 hover:text-white transition-colors block py-2"
            >Nosotros</a
        >
        <a
            href="#salidas"
            class="mobile-link text-lg text-gray-400 hover:text-white transition-colors block py-2"
            >Salidas</a
        >
        <a
            href="#servicios"
            class="mobile-link text-lg text-gray-400 hover:text-white transition-colors block py-2"
            >Servicios</a
        >
        <a
            href="#contacto"
            class="mobile-link text-lg text-gray-400 hover:text-white transition-colors block py-2"
            >Contacto</a
        >
        <div class="pt-4">
            <Button
                href="#contacto"
                variant="primary"
                class="w-full justify-center"
            >
                Únetenos
            </Button>
        </div>
    </div>

    <script>
        const menuBtn = document.getElementById("mobile-menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        const mobileLinks = document.querySelectorAll(".mobile-link");

        if (menuBtn && mobileMenu) {
            menuBtn.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
                mobileMenu.classList.toggle("flex");
            });

            // Close menu when clicking a link
            mobileLinks.forEach((link) => {
                link.addEventListener("click", () => {
                    mobileMenu.classList.add("hidden");
                    mobileMenu.classList.remove("flex");
                });
            });
        }
    </script>
</nav>
