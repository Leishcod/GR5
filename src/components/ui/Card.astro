---
interface Props {
    title: string;
    date: string;
    description: string;
    image: string;
}

const { title, date, description, image } = Astro.props;
---

<div
    class="bg-zinc-900/50 border border-white/10 rounded-xl overflow-hidden hover:border-primary/50 transition-all group"
>
    <div class="aspect-video overflow-hidden">
        <img
            src={image}
            alt={title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        />
    </div>
    <div class="p-6 text-left">
        <span class="text-primary text-sm font-medium">{date}</span>
        <h3 class="text-xl font-bold text-white mt-2 mb-3">{title}</h3>
        <p class="text-gray-400 text-sm leading-relaxed">
            {description}
        </p>
    </div>
</div>
