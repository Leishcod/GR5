---
interface Props {
    text: string;
    class?: string;
}
const { text, class: className } = Astro.props;
---

<span
    class:list={[
        "inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20",
        className,
    ]}
>
    {text}
</span>
