---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/shared/Navbar.astro";
import Footer from "../components/shared/Footer.astro";
import Hero from "../components/sections/Hero.astro";
---

<Layout title="Los Tralaleritos | Bienvenido">
	<Navbar />

	<main>
		<Hero />

		<!-- Placeholder for other sections to be implemented -->
		<section id="nosotros" class="py-24 bg-zinc-900/50">
			<div class="container mx-auto px-6 text-center">
				<h2 class="text-3xl md:text-5xl font-bold mb-8 text-white">
					Sobre <span class="text-primary">Nosotros</span>
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto">
					Somos un grupito conformado por 6 hombres totalmente
					masculinos. Estamos dispuestos a las grandes aventuras de la
					vida, dentro de nuestro querido Perú
				</p>
			</div>
		</section>

		<section id="salidas" class="py-24">
			<div class="container mx-auto px-6 text-center">
				<h2 class="text-3xl md:text-5xl font-bold mb-8 text-white">
					Nuestros <span class="text-primary">Salidas</span>
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto">
					Próximamente, nuevas salidas.
				</p>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
