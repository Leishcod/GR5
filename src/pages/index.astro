---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/shared/Navbar.astro";
import Footer from "../components/shared/Footer.astro";
import Hero from "../components/sections/Hero.astro";
import Card from "../components/ui/Card.astro";
---

<Layout title="Los Tralaleritos | Página Oficial">
	<Navbar />

	<main>
		<Hero />

		<!-- Section: Nosotros -->
		<section id="nosotros" class="py-24 bg-zinc-900/50">
			<div class="container mx-auto px-6">
				<div
					class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
				>
					<!-- Text Content -->
					<div class="text-left">
						<h2
							class="text-3xl md:text-5xl font-bold mb-6 text-white"
						>
							Sobre <span class="text-primary">Nosotros</span>
						</h2>
						<p class="text-gray-400 text-lg leading-relaxed mb-6">
							Somos un grupito conformado por 6 hombres totalmente
							masculinos. Estamos dispuestos a las grandes
							aventuras de la vida, dentro de nuestro querido
							Perú.
						</p>

						<div class="mb-6">
							<h3 class="text-white text-xl font-bold mb-2">
								Integrantes:
							</h3>
							<ul
								class="text-gray-400 text-lg space-y-1 ml-4 list-disc marker:text-primary"
							>
								<li>Leonel Cruzado</li>
								<li>Oscar Castañeda</li>
								<li>Ricardo Moreno</li>
								<li>Danghelo Rodriguez</li>
								<li>Eduardo Quispe</li>
								<li>Franco Gutierrez</li>
							</ul>
						</div>

						<p class="text-gray-400 text-lg leading-relaxed">
							Nos apasiona explorar nuevos lugares y crear
							recuerdos inolvidables.
						</p>
					</div>

					<!-- Image Content -->
					<div class="relative group max-w-sm mx-auto">
						<div
							class="absolute -inset-1 bg-gradient-to-r from-primary to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"
						>
						</div>
						<div
							class="relative aspect-square rounded-2xl overflow-hidden shadow-2xl"
						>
							<img
								src="/laura.jpeg"
								alt="Grupo de amigos"
								class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
							/>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="salidas" class="py-24">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-5xl font-bold mb-4 text-white">
						Nuestras <span class="text-primary">Salidas</span>
					</h2>
					<p class="text-gray-400 max-w-2xl mx-auto">
						Instantes en los que nos relajamos y nos olvidamos del
						sufrimiento.
					</p>
				</div>

				<!-- Grid de Tarjetas -->
				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
				>
					<Card
						title="Despedida colegial"
						date="Diciembre del 2023"
						description="El grupito se preparaba para decrile ADIÓS al colegio. Además un miembro no estaba presente porque siempre será falla."
						image="/chau.jpeg"
					/>
					<Card
						title="Antitonazo"
						date="Diciembre del 2025"
						description="Salida entre una gran cantidad de miembros (incluído el grupito)."
						image="/dec.jpeg"
					/>
					<Card
						title="Coney Park 2026"
						date="Enero del 2026"
						description="Una salida entre 2 de los miembros más fieles y el único más falla."
						image="/falla.jpg"
					/>
					<Card
						title="Salida de san valentin"
						date="Febrero del 2026"
						description="Ni siquiera salimos, fuimos tremendas fallas."
						image="https://elcomercio.pe/resizer/v2/R6OD2M5MBJHUNEIQTBITM4GG4I.jpg?auth=7a7acdafe4025cc5f80f3c3e0914681b240f916f51cf688591a1488e5c52c960&width=980&quality=75&smart=true"
					/>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
