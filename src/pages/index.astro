---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/shared/Navbar.astro";
import Footer from "../components/shared/Footer.astro";
import Hero from "../components/sections/Hero.astro";
import Card from "../components/ui/Card.astro";
---

<Layout title="Los Tralaleritos | Página Oficial">
	<Navbar />

	<main>
		<Hero />

		<!-- Section: Nosotros -->
		<section id="nosotros" class="py-24 bg-zinc-900/50">
			<div class="container mx-auto px-6">
				<div
					class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
				>
					<!-- Text Content -->
					<div class="text-left">
						<h2
							class="text-3xl md:text-5xl font-bold mb-6 text-white"
						>
							Sobre <span class="text-primary">Nosotros</span>
						</h2>
						<p class="text-gray-400 text-lg leading-relaxed mb-6">
							Somos un grupito conformado por 6 hombres totalmente
							masculinos. Estamos dispuestos a las grandes
							aventuras de la vida, dentro de nuestro querido
							Perú.
						</p>
						<p class="text-gray-400 text-lg leading-relaxed">
							Nos apasiona explorar nuevos lugares y crear
							recuerdos inolvidables juntos.
						</p>
					</div>

					<!-- Image Content -->
					<div class="relative group">
						<div
							class="absolute -inset-1 bg-gradient-to-r from-primary to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"
						>
						</div>
						<div
							class="relative aspect-square rounded-2xl overflow-hidden shadow-2xl"
						>
							<!-- Placeholder image from Unsplash -->
							<img
								src="https://images.unsplash.com/photo-1511632765486-a01980e01a18?q=80&w=2070&auto=format&fit=crop"
								alt="Grupo de amigos"
								class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
							/>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="salidas" class="py-24">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-5xl font-bold mb-4 text-white">
						Nuestras <span class="text-primary">Salidas</span>
					</h2>
					<p class="text-gray-400 max-w-2xl mx-auto">
						Coleccionando momentos épicos y anécdotas para el
						recuerdo.
					</p>
				</div>

				<!-- Grid de Tarjetas -->
				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
				>
					<Card
						title="Viaje a Cusco"
						date="Diciembre 2023"
						description="Nuestra gran aventura recorriendo las calles de Cusco y visitando Machu Picchu."
						image="https://images.unsplash.com/photo-1587595431973-160d0d94add1?q=80&w=2076&auto=format&fit=crop"
					/>
					<Card
						title="Camping en la Playa"
						date="Verano 2024"
						description="Un fin de semana de fogatas, música y desconexión total frente al mar."
						image="https://images.unsplash.com/photo-1523987355523-c7b5b0dd90a7?q=80&w=2070&auto=format&fit=crop"
					/>
					<Card
						title="Trekking de Montaña"
						date="Próximamente"
						description="Preparándonos para nuestra próxima ruta de senderismo y contacto con la naturaleza."
						image="https://images.unsplash.com/photo-1551632811-561732d1e306?q=80&w=2070&auto=format&fit=crop"
					/>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
