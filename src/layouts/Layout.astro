---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Sitio web de Los Tralaleritos" />
        <meta name="viewport" content="width=device-width" />

        <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

        <link rel="icon" type="image/png" href="GrupoIcon.png" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body
        class="bg-background text-white font-sans antialiased selection:bg-primary selection:text-white"
    >
        <slot />
    </body>
</html>
